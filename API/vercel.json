{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "api/index.js"
    },
    {
      "src": "/api/countries",
      "dest": "api/index.js"
    },
    {
      "src": "/api/generate",
      "dest": "api/index.js"
    },
    {
      "src": "/api/decode",
      "dest": "api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
}
